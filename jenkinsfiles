pipeline {
    
agent any  
tools {
  nodejs 'nodejs20'
}

stages{
    stage("git clone"){
        steps{
         git branch:'main', url:'https://github.com/MarouaneBRomdhane/CI_CD_DOCCUMENTATION.git'
        }
    }
    
      stage("install dependencies"){
        steps{
     
           
           sh 'npm install'
       
        }
    }
    
      stage("build the project"){
        steps{

            sh 'npm run build'
          
       
        }
    }
    
}
    
}